{% extends 'base.html.twig' %}

{% block page_title 'Załóż konto' %}

{% block body_id 'welcome' %}
{% block body_width 'width:850px;' %}

{% block main %}

        {% if error|default(false) %}
            <div class="w-100 alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        {% block flash_messages %}
            {{ include(_entity_config is defined ? _entity_config.templates.flash_messages : '@EasyAdmin/default/flash_messages.html.twig') }}
        {% endblock flash_messages %}

    <p class="lead">
        {{ form_start(form) }}      
            <div class="row">
                <div class="col-6">
                    <fieldset>
                        <legend>Dane firmy</legend>
                        {{ form_row(form.name_company) }}
                        {{ form_row(form.street) }}
                        {{ form_row(form.code_post) }}
                        {{ form_row(form.city) }}
                        {{ form_row(form.nip) }}
                        {{ form_row(form.regon) }}
                    </fieldset>
                </div>
                <div class="col-6">
                    <fieldset>
                        <legend>Dane konta</legend>
                        {{ form_row(form.firstname) }}
                        {{ form_row(form.name) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.phone) }}
                        {{ form_row(form.plainPassword) }}
                    </fieldset>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    {{ form_row(form.akcept) }}
                    {{ form_label(form.akcept, 'Akceptuję postanowienia Regulaminu', {
                        'label_attr': {'class': 'CUSTOM_LABEL_CLASS'}
                    }) }}
                    <a href="https://dymcode.eu/regulamin">Świadczenia Usług.</a>

                    {{ form_row(form.submit) }}
                    <a href="{{ path('app_login') }}" class="btn btn-lg btn-info btn-block">Panel logowania</a>
                </div>
            </div>   
        {{ form_end(form) }}
    </p>

{% endblock %}
